@using ZayShop.Areas.Admin.Models.Slider
@model SliderCreateVM
<div class="d-flex justify-content-center w-75">
	<form asp-controller="Slider" asp-action="Create" method="post">

		<div class="form-group">
			<label asp-for="PhotoPath"></label>
			<input asp-for="PhotoPath" class="form-control" placeholder="Enter PhotoPath" />
			<span class="text-danger" asp-validation-for="PhotoPath"></span>
		</div>
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" placeholder="Enter Name" />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>	
		<div class="form-group">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" placeholder="Enter Title" />
			<span class="text-danger" asp-validation-for="Title"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" placeholder="Enter Description" />
			<span class="text-danger" asp-validation-for="Description"></span>
		</div>
		<button type="submit" class="btn btn-primary">CREATE</button>
		<a class="btn btn-outline-info" asp-controller="Slider" asp-action="Index">Cancel</a>
	</form>
</div> 