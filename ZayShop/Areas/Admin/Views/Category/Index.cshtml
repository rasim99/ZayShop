@using ZayShop.Areas.Admin.Models.Category
@model CategoryIndexVM

<!-- Categories Table -->
@if(Model.Categories.Count!=0)
{
       
    <div class="card  shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"> Category Table</h6>
        </div>
        <div class="card-body  text-center">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-success">Name</th>
                            <th class="text-success">Create Date</th>
                            <th class="text-success">Modified Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr  >
                                <td class="text-gray-500 w-75">@category.Name</td>
                                <td class="text-gray-500 w-75">@category.CretaAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-gray-500 w-75">@category.ModifiedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class=" d-flex justify-content-center">
                                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Update</a>
                                    <form method="post" style="margin-left:20px" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                        </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  }
  else {
<h3 class=" text-center text-danger">Not found any Category</h3>
  }
